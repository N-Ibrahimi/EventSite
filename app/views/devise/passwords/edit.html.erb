
<div class="container">

<center>
    <div class="card border-secondary col-md-5 m-2">
        <div class="card-header col-lg-12 p-2 m-0"> <h2>Change your password</h2> </div>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <%= f.hidden_field :reset_password_token %>

    <div class="card-body font-weight-bold ">
    <div class="form-group">

              <div class="field justify-content-center">">
                <%= f.label :password, "New password",style:" control-label", class:"col-md-7 text-left" %>
                <% if @minimum_password_length %>
                  <em>(<%= @minimum_password_length %> characters minimum)</em><br />
                <% end %>
                <%= f.password_field :password, autofocus: true,class:"col-md-7 form-control", autocomplete: "new-password" %>
              </div>

              <div class="field justify-content-center">
                <%= f.label :password_confirmation, "Confirm new password",style:" control-label", class:"col-md-7 text-left" %>
                <%= f.password_field :password_confirmation, class:"col-md-7 form-control",autocomplete: "off" %>
              </div>

        <div class="action row col-md-12">
          <%= f.submit "Change my password",  class:"btn btn-outline-success col-md-3"%>
        </div>
        <% end %>
        </div>
        </div>
        </div>

<%= render "devise/shared/links" %>
