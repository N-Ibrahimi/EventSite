<div class="container">

<center>
<div class="card border-secondary col-md-5 m-2">
    <div class="card-header col-lg-12 p-2 my-2 bg-danger text-white">

<h2>Forgot your password?</h2></div>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

    <div class="card-body font-weight-bold ">
              <div class="form-group">


   <div class="field justify-content-center">
    <%= f.label :email , style:" control-label", class:"col-md-9 text-left"%>
    <%= f.email_field :email, autofocus: true,class:"col-md-9 form-control", autocomplete: "email" %>
  </div>

  <div class="action row justify-content-center ">
  <br/><br/>
    <%= f.submit "Send me reset password link", class:"btn btn-outline-warning  text-dark col-md-8" %>
  </div>



<% end %>
</div>
</div>
 <%= render "devise/shared/links" %>
</div>


