
<div class="container">

<center>
<div class="card border-secondary col-md-5 m-2">
    <div class="card-header col-lg-12 p-2 m-0"><h2>Edit <%= resource_name.to_s.humanize %></h2></div>

              <%= form_for(resource, as: resource_name,url: registration_path(resource_name), html: { method: :put}) do |f| %>
              <%= render "devise/shared/error_messages", resource: resource %>

               <div class="card-body font-weight-bold ">
                 <div class="form-group">

                        <div class="field justify-content-center">
                          <%= f.label :email, style:" control-label", class:"col-md-7 text-left" %>
                          <%= f.email_field :email, autofocus: true, class:"col-md-7 form-control",  autocomplete: "email" %>
                                  
                                  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                                    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
                                  <% end %>
                              
                        </div>

                        <div class="field justify-content-center">
                            <br/>
                          <%= f.label :password, style:" control-label", class:"col-md-7 text-left" %><br/>
                           <em class="text-muted">* leave blank if you don't want to change it</em>
                        
                           <%= f.password_field :password, autocomplete: "new-password",class:"col-md-7 form-control"%>
                            <% if @minimum_password_length %>
                           <em class="text-danger"><%= @minimum_password_length %> characters minimum</em>
                             <% end %>
                        </div>

                        <div class="field justify-content-center">
                        <br/>
                          <%= f.label :password_confirmation,style:" control-label", class:"col-md-7 text-left" %><br/>
                          <%= f.password_field :password_confirmation, autocomplete: "new-password",class:"col-md-7 form-control" %>
                        </div>

                        <div class="field justify-content-center">
                         <br/>
                          <%= f.label :current_password,style:" control-label", class:"col-md-7 text-left" %><br/>
                          <em class="text-muted">we need your current password to confirm your changes</em><br/>
                          <%= f.password_field :current_password, autocomplete: "current-password",class:"col-md-7 form-control" %>
                        </div>
                   </div>
                 
                    <div class="actions row d-flex justify-content-around col-md-12">
                          <%= f.submit "Update", class:"btn btn-outline-success col-md-3", style:"display:inline-block" %><% end %> 
                           <%= button_to "Cancel my account",registration_path(resource_name), class:"btn btn-outline-danger col-md-12", data: { confirm: "Vous Ãªtes sur pour annuler l'opperation?" }, method: :delete %>
                       </div>
                      
                         </div>
                          <%= link_to "Back", :back %><br/>
              </div>
              
           </div>
</div>
