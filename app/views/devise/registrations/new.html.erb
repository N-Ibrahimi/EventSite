
  <div class="container">

<center>
<div class="card border-secondary col-md-5 m-2">
    <div class="card-header text-light bg-success col-lg-12 p-2 my-2"><h2>Sign up</h2></div>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>    
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="card-body font-weight-bold ">
    <div class="form-group">

          <br/>

         <div class="field justify-content-center">
          <%= f.label :email, style:" control-label", class:"col-md-8 text-left" %>
          <%= f.email_field :email, autofocus: true,class:"col-md-8 form-control", autocomplete: "email" %>
        </div>

        <div class="field justify-content-center">
        <br/>
          <%= f.label :password , style:" control-label", class:"col-md-8 text-left"%><br/>
          <% if @minimum_password_length %>
          <% end %>
          <%= f.password_field :password,class:"col-md-8 form-control", autocomplete: "new-password" %>
          <em>*<%= @minimum_password_length %> characters minimum</em>
        </div>

        <div class="field justify-content-center">
        <br/>
          <%= f.label :password_confirmation, style:" control-label", class:"col-md-8 text-left" %><br/>
          <%= f.password_field :password_confirmation, class:"col-md-8 form-control",autocomplete: "new-password" %>
        </div>

        <div class="actions row  justify-content-center mt-3 ">
        <br/>
          <%= f.submit "Sign up",  class:"btn btn-outline-success  col-md-3"%>
        </div>
      <% end %>
      </div>
      <%= render "users/shared/links" %>
      
      </div>
      <center>
      </div>


