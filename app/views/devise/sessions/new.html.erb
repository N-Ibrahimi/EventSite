<div class="container">

<center>
<div class="card border-secondary col-md-5 m-2">
    <div class="card-header col-lg-12 p-2 my-3 bg-primary text-white"><h2>Log in</h2></div>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
 

  <div class="card-body font-weight-bold ">
  <div class="form-group">

 <div class="field justify-content-center">
 <br/>
    <%= f.label :email,  style:" control-label", class:"col-md-9 text-left"%>
    <%= f.email_field :email, autofocus: true, class:"col-md-9 form-control",autocomplete: "email" %>
  </div>

 <div class="field justify-content-center">
 <br/>
    <%= f.label :password,  style:" control-label", class:"col-md-9 text-left" %>
    <%= f.password_field :password,class:"col-md-9 form-control", autocomplete: "current-password" %>
  </div>

  <% if devise_mapping.rememberable? %>

     <div class="field justify-content-center">
    <br/>
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me,  style:" control-label", class:"col-md-6 text-left" %>
  
    </div>
  <% end %>

 <div class="action row justify-content-center ">
 <br/>
    <%= f.submit "Log in", class:"btn btn-outline-primary  mt-4 col-md-4" %>
  </div>
<% end %>
 </div>
  </div>
<%= render "devise/shared/links" %>
 </div>
  </div>
