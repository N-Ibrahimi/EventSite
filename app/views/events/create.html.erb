<%= form_tag url_for(action: 'new'), method: "Post" do %>

   <input type='hidden' name='authenticity_token' value='<%= form_authenticity_token %>'>

  <%= label_tag 'Title' %>
  <%= text_field_tag 'title', @event.title %>
  <br /> <br />

  <%= label_tag 'Start Date' %>
  <%= text_area_tag 'start_date', @event.start_date %>
  <br /> <br />

  <%= label_tag 'Duration' %>
  <%= text_field_tag 'duration', @event.duration %>
  <br /> <br />

   <%= label_tag 'Price' %>
  <%= text_field_tag 'price', @event.price %>
  <br /> <br />

   <%= label_tag 'Location' %>
  <%= text_field_tag 'location', @event.location %>
  <br /> <br />

   <%= label_tag 'Description' %>
  <%= text_field_tag 'description', @event.description %>
  <br /> <br />

  <%= submit_tag 'Update Post' %>