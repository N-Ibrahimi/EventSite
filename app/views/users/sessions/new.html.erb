<div class="container">

<center>
<div class="card border-secondary col-md-5 m-2">
    <div class="card-header col-lg-12 p-2 mt-2">
    <h2>Log in</h2>
    </div>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>


            <div class="card-body font-weight-bold ">
              <div class="form-group">


              <div class="field justify-content-center">
                  <%= f.label :email,style:" control-label", class:"col-md-7 text-left" %><br/>
                  <%= f.email_field :email, autofocus: true, autofocus: true, class:"col-md-7 form-control", autocomplete: "email" %>
                </div>

              <div class="field justify-content-center">
                  <%= f.label :password, style:" control-label", class:"col-md-7 text-left" %><br/>
                  <%= f.password_field :password, autofocus: true, class:"col-md-7 form-control", autocomplete: "current-password" %>
                </div>

                <% if devise_mapping.rememberable? %>

                 <div class="field justify-content-center">
                    <%= f.check_box :remember_me %>
                    <%= f.label :remember_me,  autofocus: true,style:" control-label", class:"col-md-7 text-left" %>
                  </div>
                <% end %>

                <div class="action row d-flex justify-content-around col-md-12">
                  <%= f.submit "Log in", class:"btn btn-outline-success col-md-3" %>
                </div>
              <% end %>
 </div>
  </div>
   </div>
    </div>
  


