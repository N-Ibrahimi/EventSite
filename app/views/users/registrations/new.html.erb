
  <div class="container">

<center>
<div class="card border-secondary col-md-5 m-2">
    <div class="card-header col-lg-12 p-2 mb-2 mt-3 bg-danger text-white"><h2>Sign up</h2></div>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>    
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="card-body font-weight-bold ">
    <div class="form-group">

        <div class="field justify-content-center">
          <%= f.label :email, style:" control-label", class:"col-md-7 text-left" %><br/>
          <%= f.email_field :email, autofocus: true,class:"col-md-7 form-control", autocomplete: "email" %>
        </div>

        <div class="field justify-content-center">
          <%= f.label :password , style:" control-label", class:"col-md-7 text-left"%>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password,class:"col-md-7 form-control", autocomplete: "new-password" %>
        </div>

        <div class="field justify-content-center">
          <%= f.label :password_confirmation, style:" control-label", class:"col-md-7 text-left" %><br/>
          <%= f.password_field :password_confirmation, class:"col-md-7 form-control",autocomplete: "new-password" %>
        </div>

        <div class="actions row d-flex justify-content-around col-md-12"">
          <%= f.submit "Sign up",  class:"btn btn-outline-success col-md-3", style:"display:inline-block"%>
        </div>
      <% end %>
      </div>
      </div>
      <center>
      </div>


<%= render "users/shared/links" %>

